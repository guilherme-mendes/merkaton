<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.descrição %></td>
        <td><%= produto.preço %></td>
        <td><%= link_to 'Mostrar', produto, class: "btn btn-link" %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto), class: "btn btn-link" %></td>
        <td><%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-link"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_produto_path, class: "btn btn-link" %>
