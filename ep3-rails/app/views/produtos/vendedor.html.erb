<table class="table table-striped table-bordered">
    <tr>
        <th class="center">Imagem</th>
        <th class="center">Nome</th>
        <th class="center">Descrição</th>
        <th class="center">Preço</th>
        <th class="center">Produto</th>
    </tr>

    <% @produtos.each do |produto|%>
        <tr>
            <td class="center"><%= image_tag produto.image.url(:thumb) %></td>
            <td class="center"><%= produto.nome %></td>
            <td class="center"><%= produto.descrição %></td>
            <td class="center"><%= number_to_currency(produto.preço, unit: "R$ ", separator: ",", delimiter: "") %></td>
            <td class="center">
            <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Opções <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><%= link_to "Visualizar", produto, class: "btn btn-link" %></li>
                    <li><%= link_to "Editar", edit_produto_path(produto), class: "btn btn-link"%></li>
                    <li><%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'Tem certeza que deseja excluir esse produto?' }, class: "btn btn-link" %></li>
                </ul>
                </div>
            </td>
            </tr>
        <%end%>
        </table>

<% if user_signed_in? %>
<%= link_to 'Novo Produto', new_produto_path, class: "btn btn-success" %>
<% end %>